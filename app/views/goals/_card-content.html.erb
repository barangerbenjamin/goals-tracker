<div class="card-top" style='background-color: <%= goal.tags.first.color %>'>
</div>
<div class="card-image">
  <div class="card-date">
    <%= goal.due_date.strftime('%a, %b %d') %>
  </div>
  <img src="<%= goal.tags.first.url %>" alt="">
</div>
<div class="card-bottom">
  <div class="header">
    <%= goal.name %>
  </div>
  <div class="body">
    <%= link_to goal_path(goal), data: {turbolinks: false} do %>
      <%= goal.description.truncate(50) %>
    <% end %>
  </div>
</div>
