<div class="col-sm-8 offset-2">
  <div class="row">
    <% @goals.each do |goal| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= goal.name %> - <%= goal.due_date %></h5>
          <p class="card-text"><%= goal.description %>.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    <% end %>
  </div>
</div>