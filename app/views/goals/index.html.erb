<div class="card-stack">
  <div class="cards">
    <% @goals.each_with_index do |goal, index| %>
      <div class="goal-card swipe" data-position="<%= index + 1 %>">
        <%= goal.name %>
        <%= (goal_progress(goal) * 100).to_i %>%
      </div>
    <% end %>
    <div class="goal-card" data-position="<%= @goals.count + 1 %>">
      Thats all for today
    </div>
  </div>
</div>

<style>
  .card-stack {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100vw;
    height: calc(100vh - 70px);
    padding: 15vh;
  }
  .cards {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: space-around;
    height: 100%;
  }
  .goal-card {
    background-color: red;
    border: 2px solid white;
    color: white;
    text-align: center;
    height: 350px;
    width: 245px;
    position: absolute;
    transition: all 0.3s;
    border-radius: 4px;
    z-index: 60;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
  }
  .goal-card[data-position='1'] {
    background-color: blue;
    height: 500px;
    width: 350px;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  .goal-card[data-position='2'] {
    height: 450px;
    width: 315px;
    background-color: green;
    top: -30px;
    z-index: 90;
  }
  .goal-card[data-position='3'] {
    height: 400px;
    width: 280px;
    background-color: orange;
    z-index: 80;
    top: -60px;
  }
  .goal-card[data-position='4'] {
    z-index: 70;
    height: 350px;
    width: 245px;
    top: -90px;
  }
</style>
